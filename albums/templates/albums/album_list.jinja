{% extends 'base.jinja' %}

{% block content %}

<div class="row">
    <div class="col"></div>
    <div class="col-2">
        <a href="{{ url('albums:new-album') }}" class="btn btn-primary">Add Album</a>
    </div>
</div>

<table class="table table-hover album-table">
    <thead class="thead-default">
        <tr>
            <th>Filed Under</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Genre</th>
            <th>Label</th>
        </tr>
    </thead>
    <tbody>
        {% for album in album_list %}
        <tr>
            <th scope="row">{{album.artist.file_under}}</th>
            <td>{{album.artist.display_name}}</td>
            <td>{{album.title}}</td>
            <td>{{album.genre.label}}</td>
            <td>{{album.label.name}}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if is_paginated %}
<div class="pagination">
    <span class="page-links">
        {% if page_obj.has_previous() %}
            <a href="{{ "%s?page=%d" % (url('albums:index'),page_obj.previous_page_number()) }}">previous</a>
        {% endif %}
        <span class="page-current">
            Page {{ page_obj.number }} of {{ page_obj.paginator.num_pages }}
        </span>
        {% if page_obj.has_next() %}
            <a href="{{ "%s?page=%d" % (url('albums:index'),page_obj.next_page_number()) }}">next</a>
        {% endif %}
    </span>
</div>
{% endif %}

{% endblock %}